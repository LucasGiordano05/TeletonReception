@{
    ViewData["Title"] = "Login";
    if (ViewBag.Mensaje != null)
    {
        if (ViewBag.TipoMensaje == "ERROR")
        {
                                    <div class="alert alert-danger mensaje" role="alert">@ViewBag.Mensaje</div>
        }
        else if (ViewBag.TipoMensaje == "EXITO")
        {
                                    <div class="alert alert-success mensaje" role="alert">@ViewBag.Mensaje</div>
        }

    }
}


    <div class="container justify-content-center align-content-between contenedorLogin">
        <div class="row justify-content-center align-content-center mt-4">
            <img id="logoComputadora" src="~/images/logoTeletonLogin.png" alt="Logo teletón">
            <img id="logoMobile" src="~/images/logoTeletonLoginMobile.png" alt="Logo teletón">
        </div>
        <div class="row justify-content-center align-content-center mt-4">
            <h4 class="col-md-10 col-xs-12">Bienvenido, inicie sesión para continuar</h4>
            <form class="col-md-10 col-xs-12 row justify-content-center align-content-around mt-2" asp-action="Login" asp-controller="Usuario" method="post">
            <div class="form-group  p-0">
                <input id="nombre" name="nombre" class="form-control" type="text" required>
                <label for="nombre">Usuario</label>
             </div>

            <div class="form-group mt-2 p-0">
                    <input id="contrasenia" name="contrasenia" class="form-control" type="password"  required>
                    <label for="contrasenia">Contraseña</label>
               </div>

              <div class="d-flex flex-row justify-content-start gap-2 mostrarContrasenia">
                <input type="checkbox" id="checkboxMostrarContra" />Mostrar Contraseña
            </div>
          
            <input class="btn mt-1" type="submit" value="Entrar">
            
                </form>
           
        </div>
        </div>

        <script>

    document.querySelector("#checkboxMostrarContra").addEventListener("change", function () {
        let campoContra = document.querySelector("#contrasenia");

        if (this.checked) {
            campoContra.setAttribute('type', 'text');

        } else {
            campoContra.setAttribute('type', 'password');
        }

    });
        </script>


       