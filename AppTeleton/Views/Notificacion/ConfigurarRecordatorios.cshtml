@model LogicaNegocio.Entidades.ParametrosNotificaciones

@{
    ViewData["Title"] = "ConfigurarRecordatorios";
}
@{

    if (ViewBag.Mensaje != null)
    {
        if (ViewBag.TipoMensaje == "ERROR")
        {
            <div class="alert alert-danger" role="alert">@ViewBag.Mensaje</div>
        }
        else if (ViewBag.TipoMensaje == "EXITO")
        {
            <div class="alert alert-success" role="alert">@ViewBag.Mensaje</div>
        }

    }
}

<h1>Configurar Recordatorios</h1>


<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="ConfigurarRecordatorios">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 mt-3">
                <label class="control-label">Con cuantos días de antelación mandar recordatorio de cita agendada</label>
                <input asp-for="CadaCuantoEnviarRecordatorio" class="form-control" />
                <span asp-validation-for="CadaCuantoEnviarRecordatorio" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-3 mt-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RecordatoriosEncendidos" /> Encender/Apagar Recordatorios
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="EnviarAvisos">Volver</a>
</div>

